<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.michael.feldt.nocollisionemoji.MainActivity">

    <ImageView
        android:id="@+id/cool"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/cool"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="391dp"/>

    <ImageView
        android:id="@+id/hurt"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/hurt"
        tools:layout_editor_absoluteX="323dp"
        tools:layout_editor_absoluteY="77dp"/>

    <ImageView
        android:id="@+id/laugh"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/laugh"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="16dp"/>

    <ImageView
        android:id="@+id/mad"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/mad"
        tools:layout_editor_absoluteX="209dp"
        tools:layout_editor_absoluteY="32dp"/>

    <ImageView
        android:id="@+id/money"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/money"
        tools:layout_editor_absoluteX="292dp"
        tools:layout_editor_absoluteY="334dp"/>

    <ImageView
        android:id="@+id/sick"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/sick"
        tools:layout_editor_absoluteY="193dp"
        tools:layout_editor_absoluteX="123dp"/>

    <ImageView
        android:id="@+id/smile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/smile"
        tools:layout_editor_absoluteY="193dp"
        tools:layout_editor_absoluteX="292dp"/>

    <ImageView
        android:id="@+id/boost"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="fast"
        app:srcCompat="@drawable/faster"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="495dp"/>

    <ImageView
        android:id="@+id/slow"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="slow"
        app:srcCompat="@drawable/slow"
        tools:layout_editor_absoluteX="223dp"
        tools:layout_editor_absoluteY="495dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORE:"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="14dp"
        tools:layout_editor_absoluteX="135dp"/>
    <TextView
        android:id="@+id/scoreTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score Total"
        android:gravity="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/stayMad"
        app:layout_constraintVertical_bias="0.016"/>

    <TextView
        android:id="@+id/stayMad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Stay Mad"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.468"/>

    <Button
        android:id="@+id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:onClick="reset"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintVertical_bias="0.699"/>

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/restart"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/scoreTotal"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.478"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <Chronometer
        android:id="@+id/chronometer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-1dp"
        app:layout_constraintHorizontal_bias="0.106"/>


</android.support.constraint.ConstraintLayout>
